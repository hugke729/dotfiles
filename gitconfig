[alias]
	unstage = reset HEAD --
	last = log -1 HEAD
	undo-commit = reset --soft HEAD^
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)' --abbrev-commit
[diff]
        tool = vimdiff
